+            // SessionHost: include current session + host history from before session start
+            FilterMode::SessionHost => {
+                let is_current_session = {
+                    history
+                        .session
+                        .as_bytes()
+                        .chunks(32)
+                        .any(|chunk| chunk == context.session.as_bytes())
+                };
+
+                if !is_current_session {
+                    let is_host_history = history
+                        .hostname
+                        .split(',')
+                        .contains(&context.hostname.as_str());
+                    if !is_host_history {
+                        continue;
+                    }
+
